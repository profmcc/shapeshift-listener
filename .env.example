# ShapeShift Affiliate Listener Environment Configuration
# Copy this file to .env and fill in your actual values

# Blockchain RPC Providers
# =======================

# Alchemy API Keys (Recommended for Base, Ethereum, Polygon)
ALCHEMY_API_KEY=your_alchemy_api_key_here
ALCHEMY_BASE_URL=https://base-mainnet.g.alchemy.com/v2
ALCHEMY_ETH_URL=https://eth-mainnet.g.alchemy.com/v2
ALCHEMY_POLYGON_URL=https://polygon-mainnet.g.alchemy.com/v2

# Infura API Keys (Alternative/backup)
INFURA_API_KEY=your_infura_api_key_here
INFURA_BASE_URL=https://base-mainnet.infura.io/v3
INFURA_ETH_URL=https://mainnet.infura.io/v3
INFURA_POLYGON_URL=https://polygon-mainnet.infura.io/v3

# Other RPC Providers
QUICKNODE_API_KEY=your_quicknode_api_key_here
GETBLOCK_API_KEY=your_getblock_api_key_here

# Protocol-Specific Configuration
# =============================

# ThorChain API Endpoints
THORCHAIN_MIDGARD_API=https://midgard.thorchain.info
THORCHAIN_THORNODE_API=https://thornode.thorchain.info

# CoW Swap API
COWSWAP_API_URL=https://api.cow.fi

# Rate Limiting & Performance
# ===========================
RPC_RATE_LIMIT_PER_SECOND=10
BATCH_SIZE=100
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1

# Logging & Monitoring
# ====================
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Data Storage
# ============
DATA_DIR=./data
CSV_OUTPUT_DIR=./data/csv
DATABASE_URL=sqlite:///./data/affiliate_fees.db

# Security & Validation
# =====================
REORG_WINDOW_BLOCKS=25
CONFIRMATION_BLOCKS=12
MIN_VOLUME_USD=0.0

# Development & Testing
# =====================
DEBUG_MODE=false
TESTNET_MODE=false
MOCK_RPC=false
