{
  "manifest_version": 3,
  "name": "Chainflip Affiliate Tracker v2",
  "version": "2.0.0",
  "description": "Track ShapeShift affiliate fees on Chainflip protocol",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://app.chainflip.io/*",
    "https://chainflip.io/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.chainflip.io/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chainflip Affiliate Tracker v2"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}


